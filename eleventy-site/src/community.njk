---
layout: base.njk
title: Community
extraStyles: |
    .community-container {
        max-width: 1000px;
        margin: 0 auto;
        padding: 0 2rem 5rem;
    }

    .discord-section {
        background: linear-gradient(135deg, rgba(88, 101, 242, 0.2), rgba(45, 27, 78, 0.6));
        border: 1px solid rgba(88, 101, 242, 0.3);
        border-radius: 20px;
        padding: 3rem;
        text-align: center;
        margin-bottom: 3rem;
    }

    .discord-icon {
        font-size: 4rem;
        margin-bottom: 1.5rem;
    }

    .discord-section h2 {
        font-family: 'Cinzel', serif;
        font-size: 2rem;
        color: var(--pale-gold);
        margin-bottom: 1rem;
    }

    .discord-section p {
        font-size: 1.1rem;
        color: var(--text-light);
        line-height: 1.7;
        margin-bottom: 2rem;
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
    }

    .discord-btn {
        display: inline-flex;
        align-items: center;
        gap: 0.75rem;
        padding: 1rem 2rem;
        background: #5865F2;
        color: white;
        font-family: 'Rajdhani', sans-serif;
        font-size: 1rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        text-decoration: none;
        border-radius: 10px;
        transition: all 0.3s ease;
    }

    .discord-btn:hover {
        background: #4752c4;
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(88, 101, 242, 0.4);
    }

    .community-features {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 1.5rem;
        margin-bottom: 3rem;
    }

    .community-feature {
        background: linear-gradient(135deg, rgba(45, 27, 78, 0.4), rgba(26, 15, 46, 0.6));
        border: 1px solid rgba(212, 168, 75, 0.15);
        border-radius: 16px;
        padding: 2rem;
        text-align: center;
        transition: all 0.3s ease;
    }

    .community-feature:hover {
        border-color: rgba(212, 168, 75, 0.3);
        transform: translateY(-4px);
    }

    .feature-icon {
        font-size: 2.5rem;
        margin-bottom: 1rem;
    }

    .community-feature h3 {
        font-family: 'Cinzel', serif;
        font-size: 1.25rem;
        color: var(--pale-gold);
        margin-bottom: 0.75rem;
    }

    .community-feature p {
        font-size: 0.95rem;
        color: var(--text-muted);
        line-height: 1.6;
    }

    .social-section {
        text-align: center;
        padding: 3rem 0;
        border-top: 1px solid rgba(212, 168, 75, 0.1);
    }

    .social-section h2 {
        font-family: 'Cinzel', serif;
        font-size: 1.75rem;
        color: var(--pale-gold);
        margin-bottom: 1rem;
    }

    .social-section p {
        color: var(--text-muted);
        margin-bottom: 2rem;
    }

    .social-links {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
    }

    .social-link {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem 1.5rem;
        background: rgba(74, 44, 122, 0.4);
        border: 1px solid rgba(212, 168, 75, 0.15);
        border-radius: 10px;
        color: var(--text-light);
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .social-link:hover {
        background: rgba(212, 168, 75, 0.1);
        border-color: rgba(212, 168, 75, 0.3);
        color: var(--divine-gold);
    }

    .social-link-icon {
        font-size: 1.25rem;
    }

    @media (max-width: 600px) {
        .discord-section {
            padding: 2rem 1.5rem;
        }

        .discord-section h2 {
            font-size: 1.5rem;
        }
    }
---

