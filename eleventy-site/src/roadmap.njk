<title>2026 Development Roadmap — Seventh Day Studios</title>
<link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;600;700;900&family=Cormorant+Garamond:ital,wght@0,400;0,600;1,400&family=Jost:wght@300;400;500;600&display=swap" rel="stylesheet">
<style>
  *, *::before, *::after { margin: 0; padding: 0; box-sizing: border-box; }

  :root {
    --deep-purple: #0d0a18;
    --royal-purple: #1a0f2e;
    --mystic-purple: #2d1b4e;
    --accent-purple: #4a2c7a;
    --divine-gold: #d4a84b;
    --light-gold: #e8c872;
    --pale-gold: #f5e6b8;
    --soft-white: #e8e0f0;
    --muted-lavender: #9b8bb4;
    --phase-green: #4a9d6e;
    --phase-blue: #4a7fd4;
    --phase-orange: #d4874a;
    --phase-crimson: #c0544a;
  }

  body {
    background: var(--deep-purple);
    color: var(--soft-white);
    font-family: 'Jost', sans-serif;
    overflow-x: hidden;
    min-height: 100vh;
  }

  /* ═══════ NAVBAR ═══════ */
  .roadmap-nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    background: rgba(13,10,24,0.85);
    backdrop-filter: blur(16px);
    border-bottom: 1px solid rgba(212,168,75,0.08);
  }
  .roadmap-nav-inner {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0.85rem 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .nav-logo {
    display: flex;
    align-items: center;
    gap: 0.6rem;
    text-decoration: none;
  }
  .nav-logo-icon {
    width: 36px;
    height: 36px;
    background: linear-gradient(135deg, var(--divine-gold), var(--light-gold));
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: 'Cinzel', serif;
    font-weight: 700;
    font-size: 1.1rem;
    color: var(--deep-purple);
    transition: transform 0.3s ease;
  }
  .nav-logo:hover .nav-logo-icon { transform: scale(1.05) rotate(-3deg); }
  .nav-logo-text {
    font-family: 'Cinzel', serif;
    font-size: 1rem;
    font-weight: 600;
    color: var(--pale-gold);
  }
  .nav-logo-text span { color: var(--divine-gold); }
  .nav-actions {
    display: flex;
    align-items: center;
    gap: 1rem;
  }
  .nav-home {
    font-family: 'Jost', sans-serif;
    font-size: 0.85rem;
    font-weight: 500;
    letter-spacing: 1.5px;
    text-transform: uppercase;
    text-decoration: none;
    color: var(--soft-white);
    padding: 0.5rem 1rem;
    border-radius: 6px;
    transition: color 0.3s ease;
  }
  .nav-home:hover { color: var(--divine-gold); }
  .nav-discord {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-family: 'Jost', sans-serif;
    font-size: 0.8rem;
    font-weight: 600;
    letter-spacing: 1px;
    text-transform: uppercase;
    text-decoration: none;
    color: #fff;
    background: #5865F2;
    padding: 0.5rem 1.15rem;
    border-radius: 6px;
    transition: all 0.3s ease;
  }
  .nav-discord:hover {
    background: #4752c4;
    transform: translateY(-1px);
    box-shadow: 0 4px 14px rgba(88,101,242,0.4);
  }
  .nav-discord svg {
    width: 16px;
    height: 16px;
    fill: #fff;
  }

  @media (max-width: 480px) {
    .nav-logo-text { display: none; }
    .nav-discord span { display: none; }
  }

  /* ═══════ AMBIENT BACKGROUND ═══════ */
  .ambient-bg {
    position: fixed;
    inset: 0;
    z-index: 0;
    pointer-events: none;
  }
  .ambient-bg::before {
    content: '';
    position: absolute;
    top: -40%;
    left: -20%;
    width: 80%;
    height: 80%;
    background: radial-gradient(ellipse, rgba(74,44,122,0.15) 0%, transparent 70%);
    animation: drift1 25s ease-in-out infinite;
  }
  .ambient-bg::after {
    content: '';
    position: absolute;
    bottom: -30%;
    right: -15%;
    width: 70%;
    height: 70%;
    background: radial-gradient(ellipse, rgba(212,168,75,0.06) 0%, transparent 65%);
    animation: drift2 30s ease-in-out infinite;
  }
  @keyframes drift1 {
    0%, 100% { transform: translate(0, 0); }
    50% { transform: translate(5%, 8%); }
  }
  @keyframes drift2 {
    0%, 100% { transform: translate(0, 0); }
    50% { transform: translate(-6%, -5%); }
  }

  /* ═══════ GRID OVERLAY ═══════ */
  .grid-overlay {
    position: fixed;
    inset: 0;
    z-index: 0;
    pointer-events: none;
    background-image:
      linear-gradient(rgba(212,168,75,0.015) 1px, transparent 1px),
      linear-gradient(90deg, rgba(212,168,75,0.015) 1px, transparent 1px);
    background-size: 60px 60px;
  }

  /* ═══════ MAIN CONTAINER ═══════ */
  .roadmap-container {
    position: relative;
    z-index: 1;
    max-width: 1100px;
    margin: 0 auto;
    padding: 3rem 2rem 6rem;
  }

  /* ═══════ HEADER ═══════ */
  .roadmap-header {
    text-align: center;
    margin-bottom: 4rem;
    position: relative;
  }
  .roadmap-header::after {
    content: '';
    display: block;
    width: 120px;
    height: 2px;
    background: linear-gradient(90deg, transparent, var(--divine-gold), transparent);
    margin: 2rem auto 0;
  }

  .studio-label {
    font-family: 'Jost', sans-serif;
    font-weight: 500;
    font-size: 0.8rem;
    letter-spacing: 4px;
    text-transform: uppercase;
    color: var(--divine-gold);
    margin-bottom: 1rem;
    opacity: 0;
    animation: fadeUp 0.8s ease forwards 0.2s;
  }

  .roadmap-title {
    font-family: 'Cinzel', serif;
    font-weight: 700;
    font-size: clamp(2rem, 5vw, 3.5rem);
    color: var(--pale-gold);
    line-height: 1.2;
    letter-spacing: 2px;
    opacity: 0;
    animation: fadeUp 0.8s ease forwards 0.4s;
  }
  .roadmap-title span {
    display: block;
    font-size: 0.45em;
    font-family: 'Jost', sans-serif;
    font-weight: 300;
    letter-spacing: 6px;
    color: var(--muted-lavender);
    margin-top: 0.5rem;
    text-transform: uppercase;
  }

  .roadmap-subtitle {
    font-family: 'Cormorant Garamond', serif;
    font-size: 1.15rem;
    font-style: italic;
    color: var(--muted-lavender);
    margin-top: 1.5rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
    line-height: 1.6;
    opacity: 0;
    animation: fadeUp 0.8s ease forwards 0.6s;
  }

  @keyframes fadeUp {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  /* ═══════ SCRIPTURE VERSE ═══════ */
  .scripture {
    text-align: center;
    margin-bottom: 4rem;
    padding: 1.5rem 2rem;
    border-left: 2px solid rgba(212,168,75,0.3);
    border-right: 2px solid rgba(212,168,75,0.3);
    max-width: 650px;
    margin-left: auto;
    margin-right: auto;
    opacity: 0;
    animation: fadeUp 0.8s ease forwards 0.8s;
  }
  .scripture p {
    font-family: 'Cormorant Garamond', serif;
    font-style: italic;
    font-size: 1.05rem;
    color: var(--pale-gold);
    line-height: 1.7;
  }
  .scripture cite {
    display: block;
    margin-top: 0.75rem;
    font-family: 'Jost', sans-serif;
    font-style: normal;
    font-size: 0.75rem;
    letter-spacing: 2px;
    text-transform: uppercase;
    color: var(--muted-lavender);
  }

  /* ═══════ TIMELINE STRUCTURE ═══════ */
  .timeline {
    position: relative;
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  /* Vertical line */
  .timeline::before {
    content: '';
    position: absolute;
    left: 28px;
    top: 0;
    bottom: 0;
    width: 2px;
    background: linear-gradient(
      to bottom,
      transparent,
      rgba(212,168,75,0.3) 5%,
      rgba(212,168,75,0.3) 95%,
      transparent
    );
  }

  /* ═══════ QUARTER PHASE ═══════ */
  .phase {
    position: relative;
    padding-left: 72px;
    opacity: 0;
    animation: fadeUp 0.7s ease forwards;
  }
  .phase:nth-child(1) { animation-delay: 1.0s; }
  .phase:nth-child(2) { animation-delay: 1.2s; }
  .phase:nth-child(3) { animation-delay: 1.4s; }
  .phase:nth-child(4) { animation-delay: 1.6s; }

  /* Timeline dot */
  .phase-dot {
    position: absolute;
    left: 18px;
    top: 1.8rem;
    width: 22px;
    height: 22px;
    border-radius: 50%;
    border: 2px solid var(--divine-gold);
    background: var(--deep-purple);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 2;
  }
  .phase-dot::after {
    content: '';
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: var(--divine-gold);
  }

  .phase-card {
    background: linear-gradient(135deg, rgba(45,27,78,0.4), rgba(26,15,46,0.6));
    border: 1px solid rgba(212,168,75,0.12);
    border-radius: 16px;
    padding: 2rem 2.25rem;
    transition: border-color 0.4s ease, transform 0.3s ease;
  }
  .phase-card:hover {
    border-color: rgba(212,168,75,0.3);
    transform: translateX(4px);
  }

  .phase-quarter {
    font-family: 'Jost', sans-serif;
    font-weight: 600;
    font-size: 0.7rem;
    letter-spacing: 3px;
    text-transform: uppercase;
    display: inline-block;
    padding: 0.3rem 0.9rem;
    border-radius: 4px;
    margin-bottom: 0.75rem;
  }
  .phase--q1 .phase-quarter { background: rgba(74,157,110,0.15); color: var(--phase-green); border: 1px solid rgba(74,157,110,0.25); }
  .phase--q2 .phase-quarter { background: rgba(74,127,212,0.15); color: var(--phase-blue); border: 1px solid rgba(74,127,212,0.25); }
  .phase--q3 .phase-quarter { background: rgba(212,135,74,0.15); color: var(--phase-orange); border: 1px solid rgba(212,135,74,0.25); }
  .phase--q4 .phase-quarter { background: rgba(192,84,74,0.15); color: var(--phase-crimson); border: 1px solid rgba(192,84,74,0.25); }

  .phase-name {
    font-family: 'Cinzel', serif;
    font-weight: 600;
    font-size: 1.4rem;
    color: var(--pale-gold);
    margin-bottom: 0.5rem;
    letter-spacing: 0.5px;
  }

  .phase-dates {
    font-family: 'Jost', sans-serif;
    font-size: 0.8rem;
    color: var(--muted-lavender);
    margin-bottom: 1.25rem;
    letter-spacing: 1px;
  }

  .phase-description {
    font-family: 'Cormorant Garamond', serif;
    font-size: 1.05rem;
    color: rgba(232,224,240,0.7);
    line-height: 1.6;
    margin-bottom: 1.5rem;
    font-style: italic;
  }

  /* ═══════ MILESTONE ITEMS ═══════ */
  .milestones {
    display: flex;
    flex-direction: column;
    gap: 0.6rem;
  }

  .milestone {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
    padding: 0.6rem 0;
  }

  .milestone-icon {
    flex-shrink: 0;
    width: 28px;
    height: 28px;
    border-radius: 6px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.8rem;
    margin-top: 1px;
  }

  .milestone-icon.dev { background: rgba(74,157,110,0.15); border: 1px solid rgba(74,157,110,0.2); }
  .milestone-icon.team { background: rgba(74,127,212,0.15); border: 1px solid rgba(74,127,212,0.2); }
  .milestone-icon.community { background: rgba(212,135,74,0.15); border: 1px solid rgba(212,135,74,0.2); }
  .milestone-icon.brand { background: rgba(212,168,75,0.15); border: 1px solid rgba(212,168,75,0.2); }

  .milestone-content {
    flex: 1;
  }
  .milestone-label {
    font-family: 'Jost', sans-serif;
    font-weight: 500;
    font-size: 0.95rem;
    color: var(--soft-white);
    line-height: 1.4;
  }
  .milestone-detail {
    font-family: 'Jost', sans-serif;
    font-weight: 300;
    font-size: 0.8rem;
    color: var(--muted-lavender);
    margin-top: 0.15rem;
    line-height: 1.4;
  }

  /* ═══════ CATEGORY LEGEND ═══════ */
  .legend {
    display: flex;
    justify-content: center;
    gap: 2rem;
    flex-wrap: wrap;
    margin-top: 3.5rem;
    padding-top: 2.5rem;
    border-top: 1px solid rgba(212,168,75,0.1);
    opacity: 0;
    animation: fadeUp 0.7s ease forwards 1.8s;
  }
  .legend-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-family: 'Jost', sans-serif;
    font-size: 0.75rem;
    letter-spacing: 1.5px;
    text-transform: uppercase;
    color: var(--muted-lavender);
  }
  .legend-dot {
    width: 10px;
    height: 10px;
    border-radius: 3px;
  }
  .legend-dot.dev { background: rgba(74,157,110,0.6); }
  .legend-dot.team { background: rgba(74,127,212,0.6); }
  .legend-dot.community { background: rgba(212,135,74,0.6); }
  .legend-dot.brand { background: rgba(212,168,75,0.6); }

  /* ═══════ FOOTER NOTE ═══════ */
  .roadmap-footer {
    text-align: center;
    margin-top: 3.5rem;
    opacity: 0;
    animation: fadeUp 0.7s ease forwards 2.0s;
  }
  .roadmap-footer p {
    font-family: 'Jost', sans-serif;
    font-size: 0.75rem;
    color: var(--muted-lavender);
    letter-spacing: 1px;
    line-height: 1.8;
  }
  .roadmap-footer a {
    color: var(--divine-gold);
    text-decoration: none;
    border-bottom: 1px solid rgba(212,168,75,0.3);
    transition: border-color 0.3s;
  }
  .roadmap-footer a:hover { border-color: var(--divine-gold); }

  /* ═══════ RESPONSIVE ═══════ */
  @media (max-width: 640px) {
    .roadmap-container { padding: 2rem 1rem 4rem; }
    .timeline::before { left: 18px; }
    .phase { padding-left: 52px; }
    .phase-dot { left: 8px; }
    .phase-card { padding: 1.5rem; }
    .legend { gap: 1rem; }
  }
</style>
</head>
