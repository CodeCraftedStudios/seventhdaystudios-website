---
layout: base.njk
title: About
extraStyles: |
    .about-container {
        max-width: 1000px;
        margin: 0 auto;
        padding: 0 2rem 5rem;
    }

    .about-grid {
        display: grid;
        grid-template-columns: 280px 1fr;
        gap: 3rem;
        align-items: center;
        margin-bottom: 4rem;
    }

    .about-grid.reverse {
        grid-template-columns: 1fr 280px;
    }

    .about-grid.reverse .about-image-container {
        order: 2;
    }

    .about-image {
        position: relative;
        aspect-ratio: 1;
        background: linear-gradient(135deg, var(--royal-purple), var(--mystic-purple));
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        border: 1px solid rgba(212, 168, 75, 0.2);
        overflow: hidden;
    }

    .about-image::before {
        content: '';
        position: absolute;
        inset: 0;
        background: linear-gradient(135deg, rgba(212, 168, 75, 0.1) 0%, transparent 50%);
    }

    .about-image-inner {
        text-align: center;
        z-index: 1;
    }

    .about-icon-main {
        font-size: 4rem;
        display: block;
        margin-bottom: 1rem;
    }

    .about-image-label {
        font-family: 'Cinzel', serif;
        font-size: 0.9rem;
        color: var(--divine-gold);
        text-transform: uppercase;
        letter-spacing: 2px;
    }

    .about-content h2 {
        font-family: 'Cinzel', serif;
        font-size: 1.75rem;
        color: var(--pale-gold);
        margin-bottom: 1.25rem;
    }

    .about-content p {
        font-size: 1.05rem;
        color: var(--text-light);
        line-height: 1.8;
        margin-bottom: 1rem;
    }

    .values-section {
        padding: 4rem 0;
        border-top: 1px solid rgba(212, 168, 75, 0.1);
        margin-top: 2rem;
    }

    .values-header {
        text-align: center;
        margin-bottom: 3rem;
    }

    .values-header h2 {
        font-family: 'Cinzel', serif;
        font-size: 2rem;
        color: var(--pale-gold);
        margin-bottom: 0.5rem;
    }

    .values-header p {
        color: var(--text-muted);
    }

    .values-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 1.5rem;
    }

    .value-card {
        background: linear-gradient(135deg, rgba(45, 27, 78, 0.4), rgba(26, 15, 46, 0.6));
        border: 1px solid rgba(212, 168, 75, 0.15);
        border-radius: 12px;
        padding: 1.5rem;
        display: flex;
        gap: 1rem;
        transition: all 0.3s ease;
    }

    .value-card:hover {
        border-color: rgba(212, 168, 75, 0.3);
        transform: translateY(-4px);
    }

    .value-icon {
        font-size: 2rem;
        flex-shrink: 0;
    }

    .value-card h3 {
        font-family: 'Cinzel', serif;
        font-size: 1.1rem;
        color: var(--divine-gold);
        margin-bottom: 0.5rem;
    }

    .value-card p {
        font-size: 0.95rem;
        color: var(--text-muted);
        line-height: 1.6;
    }

    .cta-section {
        padding: 4rem 2rem;
        text-align: center;
        background: linear-gradient(180deg, transparent, rgba(74, 44, 122, 0.3));
        border-radius: 20px;
        margin-top: 3rem;
    }

    .cta-section h2 {
        font-family: 'Cinzel', serif;
        font-size: 2rem;
        color: var(--pale-gold);
        margin-bottom: 1rem;
    }

    .cta-section p {
        font-size: 1.1rem;
        color: var(--text-muted);
        margin-bottom: 2rem;
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
    }

    .cta-buttons {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
    }

    @media (max-width: 768px) {
        .about-grid,
        .about-grid.reverse {
            grid-template-columns: 1fr;
            gap: 2rem;
        }

        .about-grid.reverse .about-image-container {
            order: 0;
        }

        .about-image {
            max-width: 250px;
            margin: 0 auto;
        }
    }
---

